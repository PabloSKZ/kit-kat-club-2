
<h1 class="text-center" style="margin-top: 2rem;">Liste des photos disponibles</h1>

<div class="container" style='margin-top: 5rem;'>
  <div class="row">
  <% @items.each do |item| %>
  <div class="col-md-4  d-flex justify-content-around">
    <div class="card mb-5" style="width:20rem;">
      <h3 class="card-header"><%= item.title =%></h3>
      <img style="height: auto; width: 100%; display: block;" src="<%= item.image_url =%>" alt="Card image">
      <div class="card-body">
        <p class="card-text"><%= truncate(item.description.tr('[\"\"]',''), :length => 50)  =%></p>
        <hr>
        <h4 class="card-text font-weight-bold"><%= item.price =%>â‚¬</h4>
      </div>
      <div class="card-footer text-muted text-center" >
        <a href="#" class="btn btn-primary">Ajouter au panier</a>
      </div>
    </div>
  </div>
  <% end %>
  </div>
</div>